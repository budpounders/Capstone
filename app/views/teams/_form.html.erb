<% form_for @team do |f| %>
	<%= f.error_messages %>
	<p>
		Name: <%= f.text_field :name %>
	</p>
	<p>
		Location: <%= f.text_field :location %>
	</p>
	<div id="players">
		<%= render :partial =>'player', :collection=>@team.players %>
	</div>

	<p>
		<%= link_to_function "Add A Player" do |page|
    	page.insert_html :bottom, :players, :partial => 'player', :object => Player.new
  	end %>
	</p>
	<%= f.submit :submit %>
<% end %>

<p><%= link_to 'Return Home', '/home' %></p>